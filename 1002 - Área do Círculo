import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);

        double area, raio, n = 3.14159;
        raio = sc.nextDouble();

        area = raio * raio * n;               //Realiza o cáculo da área do círuculo 

        System.out.printf("A=%.4f%n", area);

        sc.close();
    }
}
